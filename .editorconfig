# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 160
trim_trailing_whitespace = true

[*.{js,ts}]
quote_type = single
curly_bracket_next_line = false
spaces_around_brackets = inside
# indent_brace_style = BSD KNF

[*.html]
quote_type = double

[*.md]
max_line_length = 0
trim_trailing_whitespace = false