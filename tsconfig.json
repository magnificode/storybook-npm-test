{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "react",
    "declaration": true,
    "declarationDir": "build/types",
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "lib": [
      "es2017"
    ],
    "listEmittedFiles": false,
    "listFiles": false,
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "build/main",
    "pretty": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "strict": true,
    "target": "esnext",
    "traceResolution": false,
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ]
  },
  "exclude": [
    "node_modules/**"
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ]
}